<!-- Выводим заголовок и содержимое поста - страница для отображения отдельного поста -->
<div class="post-show_head">
	<h1><%= @post.title %></h1>
	<small>
		<time><%= @post.created_at.to_date.strftime("%d %B, %Y") %></time>
		|
		<%= link_to 'Изменить', edit_post_path(@post) %>
		|
		<%= link_to 'Удалить', post_path(@post), method: :delete, data: {confirm: 'Вы уверены?'} %>
	</small>
</div>
<div class="post-show_body">
	<p><%= image_tag @post.image, class: 'img-show' if @post.image? %></p>
	<p><%= @post.body %></p>
	<div class="form-group">
		<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary pull-xs-right' %>
	</div>
</div>
